<form action="/edit-item/<%= @item.id  %>" method="post">

  <label for="name">Name:</label>
  <input type="text" name="name" id="name" value="<%= @item.name  %>">

  <label for="description">Description:</label>
  <textarea name="description" id="description"><%= @item.description %></textarea>

  <label for="buy-price">Buy Price:</label>
  <input type="number" name="buy_price" id="buy-price" min="0" value="<%= @item.buy_price  %>">

  <label for="sell-price">Sell Price:</label>
  <input type="number" name="sell_price" id="sell-price" min="0" value="<%= @item.sell_price  %>">

  <label for="school">School:</label>
  <select name="school_id">
    <% @schools.each{ |school| %>
    <option value="<%= school.id %>" <%= "selected" if school.id == @item.school_id  %>><%= school.name %></option>
    <% } %>
  </select>

  <label for="supplier">Supplier:</label>
  <select name="supplier_id">
    <% @suppliers.each{ |supplier| %>
    <option value="<%= supplier.id %>" <%= "selected" if supplier.id == @item.supplier_id %>><%= supplier.name %></option>
    <% } %>
  </select>

  <label for="quantity">Stock:</label>
  <input type="number" value="<%= @inventory.quantity %>" name="quantity" id="" min="0">

  <input type="submit" value="Update">
</form>
