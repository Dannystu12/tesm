<div class="form-container">

  <form action="/add-school" method="post">

    <table>
      <tr>
        <td colspan="2" class="form-title"><h2>Add School</h2></td>
      </tr>

      <tr>
        <td><label for="icon-url">Icon URL:</label></td>
        <td><input type="text" name="icon_url" id="icon-url"></td>
      </tr>

      <tr>
        <td><label for="name">Name:</label></td>
        <td><input type="text" name="name" id="name"></td>
      </tr>

      <tr>
        <td><label for="description">Description:</label></td>
        <td><textarea name="description" id="description" rows="10" cols="75"></textarea></td>
      </tr>

      <tr>
        <td colspan="2" class="btn"><input type="submit" value="Create"></td>
      </tr>
    </table>

  </form>

  <form action="/add-school-uesp" method="post">
    <table>
      <tr>
        <td colspan="2" class="title"><h2>Add From UESP</h2></td>
      </tr>
      <tr>
        <td><label for="uesp-url">URL:</label></td>
        <td><input type="text" name="uesp_url" id="uesp-url"></td>
      </tr>
      <tr>
        <td colspan="2" class="btn"><input type="submit" value="Create"></td>
      </tr>
    </table>
  </form>
</div>
