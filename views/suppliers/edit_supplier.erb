<form action="/edit-supplier/<%= @supplier.id  %>" method="post">
  <label for="name">Name:</label>
  <input type="text" name="name" id="name" value="<%= @supplier.name  %>">

  <label for="location">Location:</label>
  <input type="text" name="location" id="location" value="<%= @supplier.location  %>">

  <label for="image-url">Image URL:</label>
  <input type="text" name="image_url" id="image-url" value="<%= @supplier.image_url %>">

  <input type="submit" value="Update">
</form>
